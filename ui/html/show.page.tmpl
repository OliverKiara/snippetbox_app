{{template "base" .}}

{{define "title"}}Snippet #{{.ID}}{{end}}

{{define "body"}}
<div class='Snippet'>
	<div class='metadata'>
		<strong>{{.Title}}</strong>
		<span>#{{.ID}}</span>
	</div>
	<pre><code>{{.Content}}</code></pre>
	<div class='metadata'>
		<time>Created: {{.Created}}</time>
		<time>Expires: {{.Expires}}</time>
		
	</div>
	
</div>
{{end}}